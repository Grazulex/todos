{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/livewire-starter-kit",
    "type": "project",
    "description": "The official Laravel starter kit for Livewire.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.9.2",
        "laravel/tinker": "^2.10.1",
        "livewire/flux": "^2.1.4",
        "livewire/flux-pro": "^2.1.4"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.15.4",
        "barryvdh/laravel-ide-helper": "^3.5.5",
        "larastan/larastan": "^3.3.1",
        "fakerphp/faker": "^1.24.1",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.22",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8",
        "peckphp/peck": "^0.1.3",
        "pestphp/pest": "^3.8.1",
        "pestphp/pest-plugin-laravel": "^3.1",
        "pestphp/pest-plugin-type-coverage": "^3.5",
        "rector/rector": "^2.0.11"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "lint": [
            "pint"
        ],
        "spelling": [
            "peck"
        ],
        "review": [
            "rector"
        ],
        "test:lint": [
            "pint --test"
        ],
        "test:rector": [
            "rector --dry-run"
        ],
        "test:types": [
            "phpstan analyse --ansi"
        ],
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:unit": "pest --parallel --ci --coverage --min=90.0",
        "clean": [
            "@lint",
            "@spelling",
            "@review"
        ],
        "test": [
            "@test:lint",
            "@test:rector",
            "@test:types",
            "@test:type-coverage",
            "@test:unit"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": {
        "flux-pro": {
            "type": "composer",
            "url": "https://composer.fluxui.dev"
        }
    }
}
